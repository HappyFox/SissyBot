#:import joy_pad sissyBot.float_joy.JoyPad

#:set my_color (0.5, 0.5, 0.5)
#:set my_color_hl (.5, .4, .5)
#:set outline_color (.2, .2, .2)



<RootWidget>:
    canvas.before:
        Color:
            rgb: my_color 
        Rectangle:
            pos: self.pos
            size: self.size
    Accordion:
        orientation: 'vertical'
        AccordionItem:
            title: 'Net Control'
            BoxLayout:
                orientation: 'vertical'
                padding: 10

                Label:
                    text: app.config.get("robot", "address")
                    id: address_label
                ToggleButton:
                    text: 'Xmit'
                    on_press: app.toggle_xmit()
        AccordionItem:
            title: 'Log'

            RstDocument:
                id:log
                show_errors: True
                text: "Da Log!"



    JoyPad:
        canvas.before:
            Color:
                rgb: outline_color
            Line:
                rectangle: (self.x, self.y, self.width, self.height)


